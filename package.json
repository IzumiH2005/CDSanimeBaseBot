
{
  "name": "cdsanimebase-bot",
  "version": "2.0.0",
  "description": "Bot Telegram avancé pour flashcards, quiz et blind tests d'anime avec système SRS et téléchargeur YouTube",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf temp/* && rm -rf cdn/images/* && rm -rf cdn/thumbnails/*",
    "backup-db": "cp database/cdsanimebase.db database/backup_$(date +%Y%m%d_%H%M%S).db"
  },
  "keywords": [
    "telegram",
    "bot",
    "flashcards",
    "quiz",
    "anime",
    "srs",
    "youtube",
    "downloader",
    "education",
    "memorization"

    "@telegraf/types": "^7.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "html-escaper": "^3.0.3",
    "node-cron": "^4.1.0",
    "sharp": "^0.34.2",
